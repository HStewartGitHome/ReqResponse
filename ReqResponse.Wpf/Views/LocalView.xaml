<UserControl x:Class="ReqResponse.Wpf.Views.LocalView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ReqResponse.Wpf.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="White">
    <Grid>
        <ContentControl Content="{Binding LocalViewModel}"/>
        <Canvas Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}">
            <Label FontSize="36" HorizontalAlignment="Center" Content="{Binding TitleMessage}" Canvas.Left="20" Canvas.Top="20" Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}"/>
            <DataGrid x:Name="TheGrid"
                Canvas.Left="20" Canvas.Top="120"
                MaxHeight="570"
                HorizontalAlignment="Left"
                Margin="10,10,0,0"
                VerticalAlignment="Stretch"
                Loaded="DataGrid_Loaded"/>
        </Canvas>
    </Grid>
    
    
</UserControl>
